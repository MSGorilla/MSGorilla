@{
    ViewBag.Title = "Error";
}

<div class="main-container">
    <div class="block-container">
        <h4>@ViewBag.Title</h4>
        <span class="help-block">An error occurred while processing your request.</span>
        <br />
        <p class=" help-block"  >
            @ViewBag.ErrorMessage
        </p>
        <br />
        <a class="btn btn-primary post-btn" href="@ViewBag.returnUrl">OK</a>
        <div class="clearfix ma-btm-20"></div>
    </div>

</div>
