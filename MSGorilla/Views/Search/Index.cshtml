@{
    ViewBag.Title = "Search";
}

<div class="main-container">
    @Html.Partial("_EventModalPartial")

    <div class="contents-container">
        <div id="notifications" class="posts-notification">
            @*<div class="alert alert-dismissable alert-warning">
                    <button class="close" type="button" data-dismiss="alert">×</button>
                    <p><a class="alert-link" href="#">You have new messages.</a></p>
                </div>*@
        </div>

        <div class="title-container-single">
            <div>
                <h4>Results for "<span class="bold">@ViewBag.SearchKeyword</span>"</h4>
            </div>
        </div>

        <div class="block-container">
            <div>
                <span class="help-block">People for "@@<span class="bold">@ViewBag.SearchKeyword</span>"</span>
            </div>
            <ul id="userlist" class="userlist-group">
                <li id="loading_message_1" class="center-block txtaln-c"><span class="spinner-loading"></span> Loading...</li>
                @*autofill by js*@
            </ul>
            <div class="clearfix"></div>
        </div>

        <div class="title-container">
            <span class="help-block">Topics for "#<span class="bold">@ViewBag.SearchKeyword</span>#"</span>
        </div>

        <div class="posts-feeds">
            <ul id="topiclist" class='list-group'>
                <li id="loading_message" class="list-group-item txtaln-c"><span class="spinner-loading"></span> Loading...</li>
                @*autofill by js*@
            </ul>
        </div>

    </div>

    <script>
        $(SearchUser('@ViewBag.SearchKeyword'));
        $(SearchTopic('@ViewBag.SearchKeyword'));
    </script>

    <div class="tools-container">
        @Html.Partial("_MePartial")
        @Html.Partial("_ShortcutPartial")
    </div>

</div>
