}

<div class="main-container">

    <div class="contents-container">
        @Html.Partial("_AlertBoxPartial")

        <div class="title-container-single">
            <div>
                <h4>Group (<span class="bold">@ViewBag.GroupName</span>)</h4>
            </div>
        </div>

        <div class="block-container">
