@{
    ViewBag.Title = "Notifications";
}

<script src="~/Scripts/common.js"></script>
<div class="main-container">
    @Html.Partial("_MessageModalPartial")
    @Html.Partial("_EventModalPartial")

    <div class="contents-container">
        <div id="notifications" class="posts-notification">
            @*<div class="alert alert-dismissable alert-warning">
                    <button class="close" type="button" data-dismiss="alert">×</button>
                    <p><a class="alert-link" href="#">You have new messages.</a></p>
                </div>*@
        </div>

        <div class="title-container">
            <h4>@ViewBag.Title</h4>
            @*<span class="help-block">What's happening now, tailored for you.</span>*@
        </div>

        <div class="nav-container">
            <ul class="nav nav-pills">
                @if (ViewBag.FeedCategory == "replyline")
                {
                    <li class="active"><a href="/Notification/index?category=replyline">Replies</a></li>
                }
                else
                {
                    <li><a href="/Notification/index?category=replyline">Replies</a></li>
                }
                @if (ViewBag.FeedCategory == "atline")
                {
                    <li class="active"><a href="/Notification/index?category=atline">Mentions</a></li>
                }
                else
                {
                    <li><a href="/Notification/index?category=atline">Mentions</a></li>
                }
                @if (ViewBag.FeedCategory == "ownerline")
                {
                    <li class="active"><a href="/Notification/index?category=ownerline">My owns</a></li>
                }
                else
                {
                    <li><a href="/Notification/index?category=ownerline">My owns</a></li>
                }
            </ul>
        </div>

        <div class="posts-feeds">
            <ul id="feedlist" class='list-group'>
                <li id="loading_message" class="list-group-item txtaln-c"><span class="spinner-loading"></span> Loading...</li>
                @*autofill by js*@
            </ul>
        </div>

        <div class="txtaln-c">
            <span id="lbl_seemore" class="help-block">Loading more...</span>
            <input id="hd_token" type="hidden" value="" />

            <script type="text/javascript">
                $(window).scroll(function () {
                    var documentTop = $(document).scrollTop();
                    var windowHeight = $(window).height();
                    var documentHeight = $(document).height();
                    if (documentTop >= (documentHeight - windowHeight)) {
                        LoadFeeds("@ViewBag.FeedCategory");
                    }
                })
            </script>
        </div>
    </div>

    <script>
        $(LoadFeeds("@ViewBag.FeedCategory"));
    </script>

    <div class="tools-container">
        @Html.Partial("_MePartial")
        @Html.Partial("_ShortcutPartial")
    </div>

</div>
