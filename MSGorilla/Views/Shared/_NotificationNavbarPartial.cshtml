<div class="nav-container">
    @if(ViewBag.Title == "Notifications")
    {
        <div class="pd-10">
            <span id="notification_category_navbar"></span>
            <span id="notification_favorite_navbar"></span>
        </div>
        <ul class="nav nav-pills">
            @if (ViewBag.FeedCategory == "atline")
            {
                <li class="active"><a href="/Notification/index?category=atline">Mentions <span id="notification_navbar_atline_count" class="badge"></span></a></li>
            }
            else
            {
                <li><a href="/Notification/index?category=atline">Mentions <span id="notification_navbar_atline_count" class="badge"></span></a></li>
            }
            @if (ViewBag.FeedCategory == "ownerline")
            {
                <li class="active"><a href="/Notification/index?category=ownerline">My owns <span id="notification_navbar_ownerline_count" class="badge"></span></a></li>
            }
            else
            {
                <li><a href="/Notification/index?category=ownerline">My owns <span id="notification_navbar_ownerline_count" class="badge"></span></a></li>
            }
            @if (ViewBag.FeedCategory == "replyline")
            {
                <li class="active"><a href="/Notification/index?category=replyline">Replies <span id="notification_navbar_reply_count" class="badge"></span></a></li>
            }
            else
            {
                <li><a href="/Notification/index?category=replyline">Replies <span id="notification_navbar_reply_count" class="badge"></span></a></li>
            }
