    }
    else{
        <div class="pd-10">
            <a class='btn btn-link btn-xs' href='/Notification/index?category=atline'>Mentions <span id="notification_navbar_atline_count" class="badge"></span></a>
            <a class='btn btn-link btn-xs' href="/Notification/index?category=ownerline">My owns <span id="notification_navbar_ownerline_count" class="badge"></span></a>
            <a class='btn btn-link btn-xs' href="/Notification/index?category=replyline">Replies <span id="notification_navbar_reply_count" class="badge"></span></a>
