@{
    ViewBag.Title = "Topic";
}

<script src="~/Scripts/echarts-plain.js"></script>
<div class="main-container">
    @Html.Partial("_EventModalPartial")

    <div class="contents-container">
        <div id="notifications" class="posts-notification">
            @*<div class="alert alert-dismissable alert-warning">
                    <button class="close" type="button" data-dismiss="alert">×</button>
                    <p><a class="alert-link" href="#">You have new messages.</a></p>
                </div>*@
        </div>

        <div class="title-container">
            <h4>
                @ViewBag.Title for "#<span class="bold">@ViewBag.Topic</span>#"
                @Html.Partial("_FeedFilterDropdownPartial")
                @if (@ViewBag.TopicId >= 0)
                {
                    <a class='btn btn-default like-btn' id='btn_topic_like' style='display:none'>&nbsp;</a>
                }
            </h4>
            <span class="help-block"> See topics you’re interested in.</span>
        </div>

        @Html.Partial("_NotificationNavbarPartial")

        <div class="posts-feeds">
            <ul id="feedlist" class='list-group'>
                <li id="loading_message" class="list-group-item txtaln-c"><span class="spinner-loading"></span> Loading...</li>
                @*autofill by js*@
            </ul>
        </div>

        @Html.Partial("_LoadMorePartial")

    </div>

    <script>
        $(LoadTopicLikeBtn("btn_topic_like", "@ViewBag.TopicId"));
        $(LoadFeeds("@ViewBag.FeedCategory", "@ViewBag.FeedId"));
    </script>

    <div class="tools-container">
        @Html.Partial("_MePartial")
        @Html.Partial("_FeedFilterPartial")
        @Html.Partial("_ShortcutPartial")
    </div>

</div>
